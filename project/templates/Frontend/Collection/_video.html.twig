{%  if video is not defined %}
{%  set video = null %}
{%  endif %}
<iframe
        id="yt-video"
        {%  if not video %}style="display:none;"{%  endif %}
        width="100%"
        height="315"
        src="https://www.youtube.com/embed/{{ video }}"
        frameborder="0"
        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen>
</iframe>