{% use "bootstrap_3_layout.html.twig" %}

{%  block filter_widget %}
<div class="form-inline">
    <div class="input-group">
        <span class="input-group-addon"><i class="fas fa-robot"></i></span>
        {{ form_widget(form.nb_players) }}
    </div>
    <div class="input-group">
        <span class="input-group-addon"><i class="fas fa-hourglass-half"></i></span>
        {{ form_widget(form.time) }}
    </div>
    <button  class="btn btn-success"><i class="fas fa-gamepad"></i>&nbsp;Chercher</button>
</div>
{%  endblock %}